<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="CustomerDaoImpl.addCustomer">
        <![CDATA[insert into customerDetail values(?,?,?)]]>
    </entry>
    <entry key="CustomerDaoImpl.selectAllCustomers">
        <![CDATA[select customerId,customerName,email,phone from customerDetail]]>
    </entry>
    <entry key="CustomerDaoImpl.deleteCustomer">
        <![CDATA[delete from customerDetail where customerId = ?]]>
    </entry>
    <entry key="CustomerDaoImpl.updateCustomer">
        <![CDATA[update customerDetail set phone=?,email=? where customerId = ?]]>
    </entry>
    <entry key="CustomerDaoImpl.searchCustomer">
        <![CDATA[select customerId,customerName,email,phone from customerDetail where customerId=?]]>
    </entry>
</properties>